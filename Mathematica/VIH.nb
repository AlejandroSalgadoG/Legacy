ClearAll["Global`*"]

ini = 0;
fin = 500;

X1ini = 450;
X2ini = 0;
X3ini = 1;

d = 0.02;
k = 100;
s = 10;
\[Beta] = 0.000024;
\[Mu] = 0.24;
c = 2.4;

X1fun[U1_] = (X1'[t] == s - d X1[t] - (1 - U1) \[Beta] X1[t] X3[t]);
X2fun[U1_] = (X2'[t] == (1 - U1) \[Beta] X1[t] X3[t] - \[Mu] X2[t]);
X3fun[U2_] = (X3'[t] == (1 - U2) k X2[t] - c X3[t]);

Manipulate[
    system = NDSolve[{X1fun[U1], X2fun[U1], X3fun[U2], X1[0] == X1ini, X2[0] == X2ini, X3[0] == X3ini}, {X1, X2, X3}, {t, ini, fin}];
    functions = First[{X1[t], X2[t], X3[t]} /. system];
 
    x1fun = Part[functions, 1];
    x2fun = Part[functions, 2];
    x3fun = Part[functions, 3];
    
    x1plot = Plot[x1fun, {t, ini, fin}, 
        PlotLabel -> "X1",
        PlotLabels -> {"X1"},
        PlotRange -> {0, 500},
        Frame -> {True, True, False, False}, 
        FrameLabel -> {"Tiempo", "Valores"},
        ImageSize -> 400
    ];
    
    x2plot = Plot[x2fun, {t, ini, fin}, 
        PlotLabel -> "X2",
        PlotLabels -> {"X2"},
        PlotRange -> {0, 100},
        Frame -> {True, True, False, False}, 
        FrameLabel -> {"Tiempo", "Valores"},
        ImageSize -> 400
    ];
    
    x3plot = Plot[x3fun, {t, ini, fin}, 
        PlotLabel -> "X3",
        PlotLabels -> {"X3"},
        PlotRange -> {0, 4000},
        Frame -> {True, True, False, False}, 
        FrameLabel -> {"Tiempo", "Valores"},
        ImageSize -> 400
    ];
    
    GraphicsGrid[{{x1plot, x2plot}, {x3plot}}],
    
    Style["Entradas", Bold],
    Delimiter,
    {{U1, 0, "U1"}, 0, 1, Appearance -> "Labeled"},
    {{U2, 0, "U2"}, 0, 1, Appearance -> "Labeled"},
    
    ControlPlacement -> Left
]
